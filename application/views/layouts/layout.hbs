<html lang="en">
  <head>
    <title>{{title}}</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <!-- Google Fonts API -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato&family=Montserrat:wght@400;500;600;700;800&family=Nunito:wght@400;500;600;700&family=Poiret+One&display=swap"
      rel="stylesheet"
    />
    <link
      rel="icon"
      href="/public/favicon.ico"
      sizes="70x70"
      type="image/ico"
    />
    <link rel="stylesheet" href="/public/stylesheets/style.css" />
    <script defer src="/public/js/front-end.js"></script>
  </head>
  <body>
    {{> header}}
    {{#if messages}}
      {{> flash-message}}
    {{/if}}
    <div id="main">
      {{{body}}}
    </div>
    {{> footer}}

    {{#if logged}}
    <script>
      let ele = document.getElementById("log-out-button");
      if (ele) {
        ele.onclick = (even) => {
          fetch('/users/log-out',{
            method: 'POST'
          })
          .then((data) => {
            location.replace('/');
          })
        }
      }
    </script>
    {{/if}}
  </body>
</html>