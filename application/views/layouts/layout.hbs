<html lang="en">
  <head>
    <title>{{title}}</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <!-- Google Fonts API -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato&family=Montserrat&family=Nunito&family=Poiret+One&display=swap"
      rel="stylesheet"
    />
    <link
      rel="icon"
      href="/public/favicon.ico"
      sizes="70x70"
      type="image/ico"
    />
    <link rel="stylesheet" href="/public/stylesheets/style.css" />
  </head>
  <body>
    {{> header}}
    {{{body}}}
    {{> footer}}

    {{#if logged}}
    <script>
      let ele = document.getElementById("log-out-button");
      if (ele) {
        ele.onclick = (even) => {
          fetch('/users/logout',{
            method: 'POST'
          })
          .then((data) => {
            location.replace('/');
          })
        }
      }
    </script>
    {{/if}}
  </body>
</html>